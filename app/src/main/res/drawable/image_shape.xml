<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Forma com cantos arredondados -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
        </shape>
    </item>

    <!-- Gradiente nas bordas -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <stroke
                android:width="3dp"
                android:color="@android:color/transparent" />
            <gradient
                android:startColor="#FF0090"
                android:centerColor="#5E2BC6"
                android:endColor="#0D41E1"
                android:type="linear"
                android:angle="45"/>
        </shape>
    </item>


    <!-- Objeto no meio -->
    <item
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/black" />
            <corners android:radius="45dp" />
        </shape>
    </item>
</layer-list>
